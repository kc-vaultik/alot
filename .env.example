# ALOT! Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
PORT=8006

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://alot:alot@localhost:5432/alot
DATABASE_POOL_SIZE=10

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["http://localhost:3004", "http://127.0.0.1:3004"]

# =============================================================================
# AWS (Optional)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# =============================================================================
# SENTRY (Optional)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# EMAIL (Optional - Future Use)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@alot.com

# =============================================================================
# CELERY
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# BUSINESS LOGIC
# =============================================================================
DEFAULT_FUNDING_MULTIPLIER=2.5
EXPIRED_LOT_REFUND_PERCENTAGE=0.98
EXPIRED_LOT_CREDIT_MULTIPLIER=1.5
TRIVIA_MAX_ATTEMPTS=3
TRIVIA_COOLDOWN_MINUTES=60
